{
  "manifest_version": 3,
  "name": "Smartschool Score Improver",
  "version": "1.0",
  "description": "Improves the user experience on Smartschool.",
  "author": "David Tanasescu/dFuZe/Alm0stEthical | https://dfuze.vip/#contact",
  "permissions": ["activeTab"],
  "host_permissions": ["https://*.smartschool.be/*"],
  "content_scripts": [
    {
      "matches": ["https://*.smartschool.be/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
